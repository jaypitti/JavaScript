<div id="p-form">
  <%= form_for :product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :base_price %>
    <%= f.text_field :base_price %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit nil, class: "btn" %>
  <% end %>
</div>
